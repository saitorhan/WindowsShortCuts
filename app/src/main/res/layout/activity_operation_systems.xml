<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OperationSystemsActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/holo_blue_dark"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Operating Systems"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonWin8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="OsClicked"
        android:text="Windows 8.1"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/buttonWin8Rt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="OsClicked"
        android:text="Windows 8.1 RT"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonWin8"
        app:layout_constraintStart_toStartOf="@+id/buttonWin8"
        app:layout_constraintTop_toBottomOf="@+id/buttonWin8" />

    <Button
        android:id="@+id/buttonWin10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="OsClicked"
        android:text="Windows 10"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonWin8Rt"
        app:layout_constraintStart_toStartOf="@+id/buttonWin8Rt"
        app:layout_constraintTop_toBottomOf="@+id/buttonWin8Rt" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tap the operating system where you want to see shortcuts"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/buttonSearchAll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimaryDark"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:onClick="OsClicked"
        android:text="@android:string/search_go"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonWin8Rt"
        app:layout_constraintStart_toStartOf="@+id/buttonWin8Rt"
        app:layout_constraintTop_toBottomOf="@+id/buttonWin10" />

</android.support.constraint.ConstraintLayout>